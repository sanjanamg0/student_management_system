extends layout

block content
  h1 Student List

  table.student-table
    thead
      tr
        th Name
        th Age
        th Course
        th Actions
    tbody
      each student in students
        tr
          td= student.name
          td= student.age
          td= student.course
          td
            a.btn.btn-edit(href=`/edit/${student._id}`) ✏ Edit
            a.btn.btn-delete(href=`/delete/${student._id}` onclick="return confirm('Are you sure you want to delete this student?')") 🗑 Delete
